<div class="container">
    <main>
        <h4 class="mb-3">Naujo kliento pridėjimas</h4>
        <form action="/client-submit" method="post">
            <div class="row g-3">
                <div class="col-12">
                    <label class="form-label">Įmonės pavadinimas</label>
                    <div class="input-group">
                        <input type="text" name="company" class="form-control">
                    </div>
                </div>
                <div class="col-12">
                    <label class="form-label">Vardas ir pavardė</label>
                    <div class="input-group">
                        <input type="text" name="name" class="form-control">
                    </div>
                </div>
                <div class="col-12">
                    <label class="form-label">Adresas</label>
                    <div class="input-group">
                        <input type="text" name="address" class="form-control">
                    </div>
                </div>
                <div class="col-12">
                    <label class="form-label">Telefono nr.</label>
                    <div class="input-group">
                        <input type="text" name="phone" class="form-control">
                    </div>
                </div>
                <div class="col-12">
                    <label class="form-label">El. pašto adresas</label>
                    <div class="input-group">
                        <input type="text" name="email" class="form-control">
                    </div>
                </div>
                <div class="col-12">
                    <label class="form-label">PVM kodas</label>
                    <div class="input-group">
                        <input type="text" name="vat" class="form-control">
                    </div>
                </div>
            </div>

            <button class="w-100 btn btn-primary btn-lg" type="submit">Continue to checkout</button>
        </form>
    </main>
</div>